{
    "name": "vscode-metapost",
    "displayName": "Metapost",
    "description": "Syntax Highlighting for MetaPost (TeX).",
    "publisher": "fjebaker",
    "icon": "images/logo.jpg",
    "repository": {
        "type": "git",
        "url": "https://github.com/fjebaker/vscode-metapost"
    },
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "mp",
            "aliases": ["MetaPost", "mp"],
            "extensions": [".mp"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "mp",
            "scopeName": "source.mp",
            "path": "./syntaxes/mp.tmLanguage.json",
            "embeddedLanguages": {
                "meta.embedded.block.latex": "latex",
                "meta.embedded.inline.latex": "latex"
            }
        }],
        "commands": [
			{
				"command": "metapost.run",
				"title": "Metapost: Run",
                "when": "editorLangId == mp"
			},
            {
				"command": "metapost.cleanDir",
				"title": "Metapost: Clean Directory",
                "when": "editorLangId == mp"
			},
            {
                "command": "metapost.previewSide",
                "title": "Metapost: Preview to the Side",
                "when": "editorLangId == mp"
            }
		]
    },

    "activationEvents": [
        "onCommand:metapost.run"
	],
    "main": "./out/extension",
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
    "devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	}
}